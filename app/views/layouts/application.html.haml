%html
  %head
    %title StorkClubOakland
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %link{:href => "//fonts.googleapis.com/css?family=Allerta+Stencil", :rel => "stylesheet", :type => "text/css"}
    %body
      %nav.navbar.navbar-inverse
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "/"} The Stork Club
          .collapse.navbar-collapse
            %ul.nav.navbar-nav.navbar-right
              %li
                %a{:href => "/booking"} Book a Show
              %li
                %a{:href => "/calendar"} Calendar
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  Bar Info
                  %span.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "/information/policy"} Policies
                  %li
                    %a{:href => "/information/venue"} Venue
                  %li
                    %a{:href => "/information/promotion"} Promotion
                  %li
                    %a{:href => "/information/general"} General
                %li
                  %a{:href => "/archive"} History
      = yield
